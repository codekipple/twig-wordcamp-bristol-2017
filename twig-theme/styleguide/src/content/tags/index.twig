---
layout: "page"
list_mode: true
generator: "taxonomy"
max_page: 5
taxonomy_attribute: "tags"
permalink: "/:name"
---
<div class="page-header">
    <h1>{{ page.term }} <small>tag</small></h1>
</div>

{% if page.list_mode %}
    {% include "posts-list.twig" with { posts: page.pagination.items } %}
{% else %}
    {% for post in page.pagination.items %}
        {% include "post.twig" %}
    {% endfor %}
{% endif %}

{% include "paginator.twig" %}