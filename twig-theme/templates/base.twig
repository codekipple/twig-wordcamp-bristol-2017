{% block html_head_container %}
<!doctype html>
<!--[if lt IE 7]><html class="no-js ie ie6 lt-ie9 lt-ie8 lt-ie7" {{site.language_attributes}}> <![endif]-->
<!--[if IE 7]><html class="no-js ie ie7 lt-ie9 lt-ie8" {{site.language_attributes}}> <![endif]-->
<!--[if IE 8]><html class="no-js ie ie8 lt-ie9" {{site.language_attributes}}> <![endif]-->
<!--[if gt IE 8]><!--><html class="no-js" {{site.language_attributes}}> <!--<![endif]-->
<head>
    <meta charset="{{site.charset}}" />
        <title>   
            {% if wp_title %}
                {{ wp_title }} - {{ site.name }}
            {% else %}
                {{ site.name }}
            {% endif %}
        </title>
    <meta name="description" content="{{site.description}}">
    <link rel="stylesheet" href="{{site.theme.link}}/css/main.css" type="text/css" media="screen" />
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="pingback" href="{{site.pingback_url}}" />
    {{function('wp_head')}}

	{% block head %}
	{% endblock %}
	</head>
{% endblock %}

<body class="{{body_class}}" data-template="base.twig">
	<header class="page-head">
		{% block header %}
			<div class="u-constrict u-clearfix">
				<h1 class="logo" role="banner">
					<a href="{{site.url}}" rel="home">{{site.name}}</a>
				</h1>
				<nav class="nav-main" role="navigation">
					{% include "partials/menu.twig" with {'menu': menu.get_items} %}
				</nav><!-- #nav -->
			</div>
		{% endblock %}
	</header>

	<main role="main">
		{% if title %}<h1>{{title}}</h1>{% endif %}
		<div class="u-constrict {{sidebar_class}}">
			{% block content %}
				Sorry, no content
			{% endblock %}
		</div>
		{% if sidebar %}
			<aside class="sidebar">
				{{sidebar}}
			</aside>
		{% endif %}
	</main>

	{% block footer %}
		<footer class="page-foot">
			<div class="u-constrict">
				{% include 'partials/footer.twig' %}
			</div>
		</footer>
		{{ function('wp_footer') }}
	{% endblock %}
</body>
</html>
