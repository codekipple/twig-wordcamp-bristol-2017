{% extends "base.twig" %}

{% block content %}
    <article class="post-type-{{post.post_type}}" id="post-{{post.ID}}">
        <section class="article-content">
            <h1 class="article-h1">{{post.title}}</h1>
            <div class="article-body">

                <div class="page-section">
                    <p>These widgets are all generated from same twig template thats used on the homepage. Twig makes it easy to have a <a href="https://en.wikipedia.org/wiki/Single_source_of_truth">single source of truth</a> for HTML patterns.</p>

                    <p>{% include 'partials/codeblocks/widgets.twig' %}</p>

                    <div class="o-layout page-widgets">
                        {% for widget in widgets %}
                            {{ loop.index != loop.first ? '-->' : '' }}<div class="o-layout__item u-1/2">
                                {% include 'partials/c-widget.twig' with {
                                    'title': widget.title,
                                    'body': widget.body
                                } %}
                            </div>{{ loop.index != loop.last ? '<!--' : '' }}
                        {% endfor %}
                    </div>
                </div>

                {{post.content}}
            </div>
        </section>
    </article>
{% endblock %}
